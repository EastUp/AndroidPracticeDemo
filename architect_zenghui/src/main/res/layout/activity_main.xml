<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_test_area"
            android:orientation="vertical"
            android:padding="@dimen/test_area_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="系统架构" />

            <Button
                android:id="@+id/change_netword_engine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="面向对象6大原则-网络引擎切换" />

            <Button
                android:id="@+id/aop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Aop面向切面编程 - 淘宝京东网络处理" />

            <Button
                android:id="@+id/reflect_annotation_generics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="反射-注解和泛型" />

            <Button
                android:id="@+id/handler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Handler源码分析" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_test_area"
            android:orientation="vertical"
            android:padding="@dimen/test_area_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="设计模式" />

            <Button
                android:id="@+id/singleton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="单例设计模式,activity管理" />

            <Button
                android:id="@+id/builder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Builder设计模式,增强的NavigationBar" />

            <Button
                android:id="@+id/factory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="工厂模式-数据存储的特有方式" />

            <Button
                android:id="@+id/decorator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="装饰者设计模式-RecycleView添加头部和底部" />

            <Button
                android:id="@+id/template"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="模板设计模式-手写OkHttp的Dispatcher" />

            <Button
                android:id="@+id/strategy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="策略模式-Log 日志输出策略" />

            <Button
                android:id="@+id/adapter_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Adapter设计模式-打造通用的IndicatorView" />

            <Button
                android:id="@+id/observe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="观察者设计模式-观察数据的插入" />

            <Button
                android:id="@+id/proxy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="代理设计模式 - 实现 Retrofit 的 create" />

            <Button
                android:id="@+id/prototype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="原型设计模式 - 订单查询拆分" />

            <Button
                android:id="@+id/iteration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="迭代器设计模式 - 构建通用 BottomTabNavigat" />

            <Button
                android:id="@+id/responsibility_chain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="责任链设计模式 - QQ微信多用户系统检测" />

            <Button
                android:id="@+id/architect_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="享元/命令/组合设计模式" />
            <Button
                android:id="@+id/architect_21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="状态/桥接/中介/备忘录设计模式" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_test_area"
            android:orientation="vertical"
            android:padding="@dimen/test_area_padding">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="第三方框架源码分析" />

            <Button
                android:id="@+id/butterknife_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="ButterKnife源码分析和手写APT(Annotation Processing Tool)" />

            <Button
                android:id="@+id/eventbus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="EventBus源码分析和手写" />

            <Button
                android:id="@+id/okhttp1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="OkHttp-Java网络编程基础" />
            <Button
                android:id="@+id/okhttp2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="OkHttp-整体架构和源码分析" />
            <Button
                android:id="@+id/okhttp3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="OkHttp-手写表单提交和文件上传" />
            <Button
                android:id="@+id/okhttp4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="OkHttp-源码精髓之拦截器分析" />
            <Button
                android:id="@+id/okhttp5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="OkHttp-上传进度监听和自定义缓存" />
            <Button
                android:id="@+id/okhttp6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="OkHttp-文件断点下载" />
            <Button
                android:id="@+id/rxjava1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text=" RXJava - 基本使用和源码分析" />
            <Button
                android:id="@+id/rxjava2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="RxJava - 自己动手写事件变换" />
            <Button
                android:id="@+id/rxjava3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="RxJava - 自己动手线程调度切换" />
            <Button
                android:id="@+id/rxjava4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="RxJava - Android实际开发场景" />
            <Button
                android:id="@+id/retrofit1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="第三方开源库 Retrofit - 源码设计模式分析" />
            <Button
                android:id="@+id/retrofit2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="第三方开源库 Retrofit - 自己动手写核心架构部分" />
        </LinearLayout>

    </LinearLayout>


</androidx.core.widget.NestedScrollView>
