<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".workmanager.WorkManagerActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_test_area"
            android:orientation="vertical"
            android:padding="@dimen/test_area_padding">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Workmanager" />


        <!--简单例子-->
        <Button
                android:id="@+id/btn_simple_task"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Run a simple task" />

        <Button
                android:id="@+id/btn_constraints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Constraints" />

        <Button
                android:id="@+id/btn_initial_delay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Initial Delay" />

        <Button
                android:id="@+id/btn_retry_backoff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Retries and Backoff Policy" />

        <Button
                android:id="@+id/btn_inputout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="input/output" />

        <Button
                android:id="@+id/btn_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="tag" />

        <Button
                android:id="@+id/btn_observing_word"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="observing work" />

        <Button
                android:id="@+id/btn_work_chain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="work chain" />

        <Button
                android:id="@+id/btn_inputMergers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="Input Mergers" />

        <Button
                android:id="@+id/btn_periodic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="PeriodicWorkRequest" />

        <Button
                android:id="@+id/btn_unique_work"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="unique work" />

        <Button
                android:id="@+id/btn_unique_work_chain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="unique work chain" />

        <Button
                android:id="@+id/btn_CoroutineWorker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="CoroutineWorker" />

        <Button
                android:id="@+id/close_all_workder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:text="关闭所有Worker" />


    </LinearLayout>




</androidx.core.widget.NestedScrollView>