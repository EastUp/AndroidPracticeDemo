<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".custom_qqarc.QQArcActivity">

    <com.east.customview.custom_qqarc.widget.StepView
        android:id="@+id/stepView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:outerColor="@android:color/black"
        app:innerColor="@android:color/holo_green_dark"
        app:borderWidth="12dp"
        app:stepTextColor="@android:color/white"
        app:stepTextSize="80sp"
        app:stepProgress="1000"
        app:stepMax="1500"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>