<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--name 自定义View的名字 MyTextView-->
    <declare-styleable name="MyTextView">
        <!--
            name:属性名称 不能跟系统或自己定义了的属性名称重复

            format 格式: string 文字  color 颜色
                        dimension 宽高 字体大小 integer 数字
                        reference 资源(drawable/color)
        -->
        <attr name="myText" format="string"/>
        <attr name="myTextColor" format="reference|color"/>
        <attr name="myTextSize" format="dimension"/>
        <attr name="myMaxLength" format="integer"/>
        <!-- background 自定义View都是继承自View , 背景是由View管理的-->
        <!--<attr name="myBackground" format="reference|color"/>-->

        <!--枚举-->
        <attr name="myInputType">
            <enum name="number" value="1"/>
            <enum name="text" value="2"/>
            <enum name="password" value="3"/>
        </attr>
    </declare-styleable>

    <!--仿QQ运动步数-->
    <declare-styleable name="StepView">
        <!-- 底部圆弧背景颜色 -->
        <attr name="outerColor" format="reference|color"/>
        <!-- 顶部圆弧背景颜色 -->
        <attr name="innerColor" format="reference|color"/>
        <!-- 圆弧的宽度 -->
        <attr name="borderWidth" format="dimension"/>
        <!-- 最大步数 -->
        <attr name="stepMax" format="integer"/>
        <!-- 已经走了的步数 -->
        <attr name="stepProgress" format="integer"/>
        <!-- 中间步数的文字颜色 -->
        <attr name="stepTextColor" format="reference|color"/>
        <!-- 中间步数的文字大小 -->
        <attr name="stepTextSize" format="dimension"/>
    </declare-styleable>

    <!--玩转变色字体-->
    <declare-styleable name="ColorTrackTextView">
        <attr name="originColor" format="reference|color"/>
        <attr name="changeColor" format="reference|color"/>
    </declare-styleable>

    <!--炫酷进度条-->
    <declare-styleable name="ProgressBar">
        <attr name="innerCircleColor" format="reference|color"/>
        <attr name="outerCircleColor" format="reference|color"/>
        <attr name="progressBarBorderWidth" format="dimension"/>
        <attr name="progressBarTextColor" format="reference|color"/>
        <attr name="progressBarTextSize" format="dimension"/>
        <attr name="progressBarProgress" format="float"/>
        <attr name="progressBarMax" format="float"/>
    </declare-styleable>

    <!-- 仿淘宝评价 -->
    <declare-styleable name="RatingBar">
        <attr name="starNormal" format="reference"/>
        <attr name="starFocus" format="reference"/>
        <attr name="starNumber" format="integer"/>
        <attr name="ratingBarPadding" format="dimension"/>
    </declare-styleable>

    <!-- 字母索引 -->
    <declare-styleable name="LetterSideBar">
        <attr name="letterTextSize" format="dimension"/>
        <attr name="letterTextColor" format="reference|color"/>
        <attr name="letterHignlightTextColor" format="reference|color"/>
    </declare-styleable>

    <!--仿酷狗侧滑效果-->
    <declare-styleable name="SlidingMenu">
        <attr name="rightMenuMargin" format="dimension"/>
    </declare-styleable>

</resources>